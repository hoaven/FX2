body{
    font-family: "Microsoft YaHei";
    background: #f4f4f4;
}

section{
    background: #f4f4f4;
}

.addform{
    background: #f4f4f4;
}

input[type="text"]{
    width: 100%;
}

.table{
    width: 100%;
    margin-bottom: 10px;
    font-size: 15px;
    background: #fff;
}

.table> ul> li{
    width: 100%;
    /*height: 48px;*/
    color: #1a1a1a;
    border-bottom: 1px solid #efeff4;
    padding: 10px 10px;
}

.table .input_left{
    color: #1a1a1a;
    width: 140px;
    height: 30px;
    padding: 0px 0 0px 16px;
    float: left;
}

.table .input_right{
    width: 60%;
    text-align: center;
    padding: 0px 0 0px 7px;
    color: #1a1a1a;
}

.add-form_lable label{
    color: #2974ff;
    font-size: 12px;
}


